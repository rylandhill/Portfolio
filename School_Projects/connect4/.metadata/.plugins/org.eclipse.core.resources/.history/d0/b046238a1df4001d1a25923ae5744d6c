import java.util.*;
import java.awt.*;
class CircleList{
	ArrayList<Circle> circles;
	public class Circle{
		public int x, y, radius;
		public Color col;
		public Circle(int x,int y, int radius,Color col) {
			this.x = x;
			this.y = y;
			this.radius = radius;
			this.col=col;
		}
	}
	public CircleList() {
		circles = new ArrayList<Circle>();
	}
	public void Add(Circle item) {
		circles.add(item);
	}
	public void AddNew(int x, int y, int radius) {
		circles.add(new Circle(x,y,radius,Color.GRAY));
	}
	public Circle getItem(int index) {
		return circles.get(index);
	}
	public int getLength() {
		return circles.size();
	}
	public void changeColor(int index,Color color) {
		circles.get(index).col=color;
	}
	public ArrayList<Circle> getList() {
		return circles;
	}
}